{
  "name": "digital-prison-reporting-mi-prototype",
  "description": "Digital Prison Reporting MI Prototype",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "scripts": {
    "start": "node start.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "rapidtest": "jest --bail",
    "cypress:open": "cypress open",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "test:integration": "start-server-and-test 3000 'cypress run'",
    "test:integration:edge": "start-server-and-test 3000 'cypress run --browser edge'",
    "test:integration:chrome": "start-server-and-test 3000 'cypress run --browser chrome'",
    "test:integration:electron": "start-server-and-test 3000 'cypress run --browser electron'",
    "test": "gulp generate-assets && jest --passWithNoTests && npm run lint"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^1.6.6",
    "acorn": "^8.5.0",
    "ansi-colors": "^4.1.3",
    "body-parser": "^1.14.1",
    "browser-sync": "^2.29.1",
    "client-sessions": "^0.8.0",
    "cookie-parser": "^1.4.6",
    "cross-spawn": "^7.0.2",
    "del": "^6.1.1",
    "dotenv": "^16.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "fancy-log": "^2.0.0",
    "glob": "^10.2.6",
    "govuk_frontend_toolkit": "^9.0.1",
    "govuk_template_jinja": "^0.26.0",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^4.1.0",
    "gray-matter": "^4.0.3",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.2.1",
    "gulp-sass": "^5.1.0",
    "inquirer": "^9.2.6",
    "lodash": "^4.17.21",
    "luxon": "3.3.0",
    "marked": "^5.0.2",
    "notifications-node-client": "^7.0.0",
    "nunjucks": "^3.2.4",
    "portscanner": "^2.2.0",
    "require-dir": "^1.2.0",
    "sass": "^1.52.3",
    "sync-request": "^6.1.0",
    "universal-analytics": "^0.5.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cypress": "12.13.0",
    "eslint-plugin-cypress": "^2.12.1",
    "glob": "^10.2.4",
    "jest": "^29.5.0",
    "jest-jasmine2": "^29.5.0",
    "standard": "^17.0.0",
    "start-server-and-test": "^2.0.0",
    "supertest": "^6.2.3",
    "wait-on": "^7.0.1"
  },
  "overrides": {
    "glob-parent": "^5.1.2"
  },
  "standard": {
    "plugins": [
      "cypress"
    ],
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testRunner": "jest-jasmine2",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!app/assets/**/*.{js,jsx}"
    ]
  }
}
